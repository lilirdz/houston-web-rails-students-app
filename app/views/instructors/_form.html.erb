<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <%= error %>
        <% end %>
<% end %>


<%= form_for @instructor do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<h3>Students:</h3>
