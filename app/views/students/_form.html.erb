<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <%= error %>
        <% end %>
<% end %>


<%= form_for @student do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :major %>
<%= f.text_field :major %>

<%= f.label :age %>
<%= f.number_field :age %>

<%= f.label :instructor %>
<%= f.collection_select :instructor_id,@instructors,:id,:name %>


<%= f.submit %>
<% end %>
